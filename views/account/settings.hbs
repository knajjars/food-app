<div class="account-container">
  {{!-- account preferences --}}
  <div class="router">
    <a href="/account/favorites">Favorites</a>
    <a href="/account/preferences">Preferences</a>
  </div>
  <div id="account-preferences" class="col s12">
    <h4>Your account settings</h4>
    <form class="col s12 account-settings-form" method="POST" action="/account/settings">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">email</i>
          <input id="icon_prefix" type="text" class="validate" value="{{loggedUser.email}}" name="email">
          <label for="icon_prefix">E-mail</label>
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" class="validate" value="{{loggedUser.name}}" name="name">
          <label for="icon_prefix">Name</label>
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix">lock_open</i>
          <input id="icon_telephone" type="password" class="validate" name="current-password">
          <label for="icon_telephone">Old password</label>
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix">lock</i>
          <input id="icon_telephone" type="password" class="validate" name="new-password">
          <label for="icon_telephone">New password</label>
        </div>
      </div>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      <button type="submit" class="waves-effect waves-light btn"><i class="material-icons right">cloud_done</i>Save</button>
    </form>
  </div>
</div>


<script src="/javascripts/account.js"></script>