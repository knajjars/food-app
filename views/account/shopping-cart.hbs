<div class="account-container">
  <ul class="tabs">
    <li class="tab col s3">
      <a href="/account/favorites">Favorites</a>
    </li>
    <li class="tab col s3">
      <a href="/account/preferences">Preferences</a>
    </li>
    <li class="tab col s3 ">
      <a href="/account/settings">Settings</a>
    </li>
    <li class="tab col s3 ">
      <a class="active" href="/account/shopping-cart">Cart</a>
    </li>
  </ul>
  <div id="account-preferences" class="col s12">
    <h4><span class="capitalize underlined-special">{{loggedUser.name}}</span>, this is your shopping cart.</h4>

    {{#each shoppingCart}}
    <h5>{{this.recipeName}}</h5>
    <div class="container">
      {{#each this.ingredients}}
      <label class="ingredient-cart" data-id="{{../this.recipeId}}">
        <input id="indeterminate-checkbox" type="checkbox" />
        <span>{{this}}</span>
      </label>
      {{/each}}
    </div>
    {{/each}}
  </div>
</div>

<script src="/javascripts/account.js"></script>