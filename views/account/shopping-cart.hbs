{{#if message}}
<div class="shoppingcart-notification">
  {{message}}
</div>
{{/if}}

<div class="account-container">
  <ul class="tabs">
    <li class="tab col s3">
      <a href="/account/favorites">Favorites</a>
    </li>
    <li class="tab col s3">
      <a href="/account/preferences">Preferences</a>
    </li>
    <li class="tab col s3 ">
      <a href="/account/settings">Settings</a>
    </li>
    <li class="tab col s3 ">
      <a class="active" href="/account/shopping-cart">Cart</a>
    </li>
  </ul>
  <div id="account-preferences" class="col s12">
    <h4><span class="capitalize underlined-special">{{loggedUser.name}}</span>, this is your shopping cart.</h4>
    <div class="shopping-cart">

      {{#each shoppingCart}}
      <div class="shopping-cart-container">
        <h5>{{this.recipeName}}</h5>
        <div class="ingredients-container">
          {{#each this.ingredients}}
          <label>
            <input class="ingredient-cart" data-id="{{../this.recipeId}}" data-ingredient="{{this}}" id="indeterminate-checkbox"
              type="checkbox" />
            <span>{{this}}</span>
          </label>
          {{/each}}
        </div>
        <a class="btn waves-effect" href="/yummly-api/recipe/{{this.recipeId}}">
          Check out
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<script src="/javascripts/account.js"></script>