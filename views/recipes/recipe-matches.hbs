<div class="decide-recipes-container">

  <p class="recipes-found">We found <strong>{{recipes.totalMatchCount}}</strong> recipes just for you.
    {{!-- <form action="/favorites/userfavorite" method="post">
      <button type="submit">TEST</button>
    </form> --}}
  </p>
  <div class="recipes-cards">
    {{#each recipes.matches}}
    <div class="recipe-card">
      <a class="relative-position-match btn-floating  btn-large waves-effect waves-light red">
        {{#includes ../userFavorites this.id }}
        <i class="material-icons">favorite</i>
      </a>
      {{else}}
      <i class="material-icons">favorite_border</i>
      </a>
      {{/includes}}
      <div class="decide-card-image">
        <img src={{this.imageURL}}>
      </div>
      <div class="card-content">
        <h5 class="card-title">{{this.recipeName}}</h5>
        <a href="{{this.id}}"></a>
        <div class="timer-course">
          {{#if this.attributes.course}}
          <div class="attribute-course">
            <i class="material-icons right">restaurant</i>
            <p>{{this.attributes.course}}</p>
          </div>
          {{/if}}

          {{#if this.recipeTime}}
          <div class="attribute-course">
            <i class="material-icons right">timer</i>
            <p>{{this.recipeTime}}</p>
          </div>
          {{/if}}
        </div>
      </div>
      <a class="waves-effect btn go-btn" href="/yummly-api/recipe/{{this.id}}"><i class="material-icons">restaurant_menu</i>
        Go</a>
    </div> {{/each}} </div>
</div>
<ul class="pagination">
  <li class="waves-effect pagination-left"><i class="material-icons">chevron_left</i></li>
  <li class="waves-effect pagination-right"><i class="material-icons">chevron_right</i></li>
</ul>
<script src="/javascripts/pagination.js"></script>

